<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#042444"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="1dp" >

        <ImageView
            android:id="@+id/ivnewscar"
            android:layout_width="120dp"
            android:layout_height="85dp"
            android:scaleType="centerCrop"
            android:src="@drawable/car1" />

        <LinearLayout
            android:id="@+id/lnContentCar1"
            android:layout_width="30dp"
            android:layout_height="match_parent"
            android:gravity="center"
            android:background="#0279d3"
            android:layout_marginRight="1.5dp"
            android:padding="5dp"
            android:orientation="vertical" >

            <ImageView
                android:id="@+id/imageView1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/icon_newright" />


        </LinearLayout>

        <LinearLayout
            android:id="@+id/lnContentCar"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#073975"
            android:paddingLeft="5dp"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/txtNameCar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Toyota Fortuner"
                android:textColor="#ffffff"
                android:textSize="18sp"
                 />

            <TextView
                android:id="@+id/txtPrice"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#ffffff"
                android:text="5000$"
                android:textSize="18sp"
                 />

            <TextView
                android:id="@+id/txtMiliage"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#ffffff"
                android:text="Mileage: 93,194" />

            <TextView
                android:id="@+id/txtColor"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#ffffff"
                android:text="Color: black silver" />

        </LinearLayout>

    </LinearLayout>

</LinearLayout>
