    <style name="card_content">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/card_content</item>
        <item name="android:layout_below">@+id/titleFrame</item>
        <item name="android:layout_toRightOf">@android:id/icon</item>
        <item name="android:layout_marginBottom">@dimen/card_content_margin_top</item>
        <item name="android:layout_marginLeft">@dimen/card_title_margin_sides</item>
        <item name="android:layout_marginRight">@dimen/card_title_margin_sides</item>
        <item name="android:singleLine">true</item>
    </style>

